<!-- views/products/new.ejs -->
<%-include('../home')%>
<body>
    <div class="form">
        <h1>New Product Form</h1>
        <form action="/products" method="POST" enctype="multipart/form-data">
            <input type="text" id="name" name="name"placeholder="Product Name" required><br>
            <input type="file" id="image" name="image" accept="image/jpeg, image/png, image/gif" placeholder="Select an image" required><br>
            <input type="text" id="price" name="price" placeholder="Price" required><br>  
            <input type="text" name="author" placeholder="Author" required value="<%= user.username %>"><br>
            <input type="text" id="quantity" name="quantity" placeholder="Quantity" required><br>
            <button type="submit">Create Product</button>
        </form>
    </div>
</body>
</html>
