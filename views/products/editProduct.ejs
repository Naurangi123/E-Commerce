<!-- views/products/edit.ejs -->
 <%-include('../layouts/header') %>
 <%-include('../home') %>
<body>
    <div class="product-add-form">
        <h1>Edit Product</h1>
        <form action="/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="text" id="name" name="name" placeholder="product name" value="<%= product.name %>" required><br><br>
            <input type="file" id="image" name="image" placeholder="Image" value="<%= product.image %>" required><br><br>
            <input type="text" id="price" name="price" placeholder="price" value="<%= product.price %>" required><br><br>
            <input type="text" id="author" name="author" placeholder="author" value="<%= product.author %>" required ><br><br>
            <input type="text" id="quantity" name="quantity" placeholder="quantity" value="<%= product.quantity %>" required><br><br>
            <button type="submit">Update Product</button>
        </form>
    </div>
</body>
</html>
<%-include('../layouts/footer') %>
