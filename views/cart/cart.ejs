<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
</head>
<body>
    <h1>Your Cart</h1>
    <ul>
        <% if (cart.products.length > 0) { %>
            <% cart.products.forEach(product => { %>
                <li>
                    Product ID: <%= product.productId %> | Quantity: <%= product.quantity %>
                    <form action="/cart/<%= cart._id %>/delete" method="POST" style="display: inline;">
                        <input type="hidden" name="productId" value="<%= product.productId %>">
                        <button type="submit">Decrease Quantity</button>
                    </form>
                    <form action="/cart/<%= cart._id %>/remove" method="POST" style="display: inline;">
                        <input type="hidden" name="productId" value="<%= product.productId %>">
                        <button type="submit">Remove Item</button>
                    </form>
                </li>
            <% }) %>
        <% } else { %>
            <li>No items in cart</li>
        <% } %>
    </ul>
    <form action="/cart/<%= cart._id %>" method="POST">
        <input type="text" name="productId" placeholder="Product ID">
        <button type="submit">Add to Cart</button>
    </form>
</body>
</html>
